# ==================================
# DATABASE CONFIGURATION
# ==================================
# PostgreSQL database connection URL
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://user:password@localhost:5432/plantrx

# ==================================
# SERVER CONFIGURATION
# ==================================
# Server port (default: 5000)
PORT=5000

# Environment mode (development, production)
NODE_ENV=development

# Session secret for secure session management
# Generate a random string for production: require('crypto').randomBytes(32).toString('hex')
SESSION_SECRET=your-random-secret-key-here

# ==================================
# STRIPE PAYMENT CONFIGURATION
# ==================================
# Stripe secret key for payment processing
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# Stripe webhook secret for webhook signature verification
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ==================================
# AI SERVICE CONFIGURATION
# ==================================
# OpenAI API key for AI-powered features
OPENAI_API_KEY=sk-your-openai-api-key

# Google Gemini API key for AI-powered features (alternative to OpenAI)
GEMINI_API_KEY=your-gemini-api-key
# Alternative name used in some files
GOOGLE_API_KEY=your-google-api-key

# ==================================
# FIREBASE ADMIN CONFIGURATION
# ==================================
# Option 1: Base64 encoded service account JSON
FIREBASE_SERVICE_ACCOUNT_BASE64=your-base64-encoded-service-account

# Option 2: Raw JSON string of service account
FIREBASE_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"..."}

# Option 3: Individual Firebase Admin credentials
FIREBASE_ADMIN_PROJECT_ID=your-project-id
FIREBASE_ADMIN_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com
FIREBASE_ADMIN_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\nYour-Private-Key\n-----END PRIVATE KEY-----

# ==================================
# SHOPIFY INTEGRATION
# ==================================
# Shopify store domain (without https://)
SHOPIFY_STORE_DOMAIN=your-store.myshopify.com

# Shopify Storefront API access token
SHOPIFY_STOREFRONT_ACCESS_TOKEN=your-storefront-access-token

# ==================================
# EMAIL MARKETING (MailerLite)
# ==================================
# MailerLite API key
MAILERLITE_API_KEY=your-mailerlite-api-key

# MailerLite group ID for newsletter subscribers
MAILERLITE_NEWSLETTER_GROUP_ID=your-newsletter-group-id

# MailerLite group ID for registered users
MAILERLITE_USERS_GROUP_ID=your-users-group-id

# ==================================
# SECURITY & API KEYS
# ==================================
# PlantRx API key for internal API authentication
PLANTRX_API_KEY=your-plantrx-api-key

# Internal API key for service-to-service authentication
INTERNAL_API_KEY=your-internal-api-key

# ==================================
# DOMAIN & DEPLOYMENT CONFIGURATION
# ==================================
# Custom domain for the application
CUSTOM_DOMAIN=plantrxapp.com

# Replit deployment flag (set to 1 if deployed on Replit)
REPLIT_DEPLOYMENT=0

# Replit domains (comma-separated list)
REPLIT_DOMAINS=your-app.replit.dev

# ==================================
# CLIENT-SIDE ENVIRONMENT VARIABLES
# ==================================
# These variables are prefixed with VITE_ and are used on the client side
# They should also be added to your .env file at the root of the project

# Firebase Client Configuration
# VITE_FIREBASE_API_KEY=your-firebase-api-key
# VITE_FIREBASE_PROJECT_ID=your-project-id
# VITE_FIREBASE_APP_ID=your-app-id
# VITE_FIREBASE_MESSAGING_SENDER_ID=your-sender-id

# Stripe Public Configuration
# VITE_STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
# VITE_STRIPE_PRICING_TABLE_ID=your-pricing-table-id

# Analytics Configuration
# VITE_GTM_ID=GTM-XXXXXXX
# VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX
# VITE_ADSENSE_CLIENT_ID=ca-pub-xxxxxxxxxx

# SEO Verification
# VITE_GOOGLE_SITE_VERIFICATION=your-verification-code
# VITE_BING_VERIFICATION=your-bing-verification-code
# VITE_YANDEX_VERIFICATION=your-yandex-verification-code
# VITE_PINTEREST_VERIFICATION=your-pinterest-verification-code

# AI Services (Client-side - Optional)
# VITE_OPENAI_API_KEY=sk-your-openai-api-key
# VITE_GEMINI_API_KEY=your-gemini-api-key
